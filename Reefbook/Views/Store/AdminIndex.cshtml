@model Reefbook.Models.StoreViewModel

@{
    Layout = null;
}

<div class="container">
    <div class="col-lg-4">
        <div class="well">
            <h3 class="text-center">Advance Search</h3>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Keyword.." />
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-info">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
            <hr />
            <div class="list-group">
                <a href="@Url.Action("Index", "Store")" class="list-group-item-active">
                    All Categories
                </a>
                @foreach (var item in Model.AllCategories)
                {
                    <a href="#" class="list-group-item">
                        @item.Category
                        <span class="badge">@item.TotalCount</span>
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-8">
        <a href="@Url.Action("Add", "Products")" class="list-group-item-active">
            Add Products
        </a>
        <h2 class="text-center">My Store</h2>
        @foreach (var item in Model.AllProducts)
        {
            <div class="col-lg-4">
                <a href="#" style="text-decoration:none;">
                    <div class="thumbnail">
                        <img src="~/images/Products/@item.Image"
                             class="img-responsive"
                             alt="@item.Name" aria-atomic="true" />
                        <div class="caption">
                            <h3>@item.Name</h3>
                            <p>
                                <small>Category: @item.Category</small>
                            </p>
                            <h4>Php @Convert.ToDouble(item.Price).ToString("#,##0.00")</h4>
                            <hr />
                            <a href="@Url.Action("AddToCart", "Store", new { id = item.ID })" class="btn btn-success btn-block">
                                Add to Cart
                            </a>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
